@model HealthyEnvironment.ViewModels.Products.ProductCategoryListViewModel
@{
    ViewData["Title"] = "ProductCategories";
}

<h2>ProductCategories</h2>

<section id="team" class="team-section appear clearfix">
    <div class="container">
        <div class="row mar-bot10">
            <div class="col-md-offset-3 col-md-6">
                <div class="section-header">
                    <div class="wow bounceIn">

                        <h2 class="section-heading animated" data-animation="bounceInUp">ProductsHome</h2>

                    </div>
                </div>
            </div>
        </div>

        <div class="row align-center mar-bot45">
            @foreach (var productCategory in Model.ProductsCategoryList)
            {
                <div class="col-md-4" onclick="location.href='/Products/ProductsInCategory?categoryId=@productCategory.CategoryId'">
                    <div class="wow bounceIn" data-animation-delay="4.8s">
                        <div class="team-member">
                            <div class="profile-picture">
                                <figure><img src="@productCategory.ImageUrl" alt=""></figure>
                            </div>
                            <div class="team-detail">
                                <h4>@productCategory.CategoryName</h4>
                                <span>ProductsCount: @productCategory.ProductsCount</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
