@model  HealthyEnvironment.ViewModels.Products.ProductDetailsViewModel
@{
    ViewData["Title"] = "ProductDetails";
}
<h2>ProductDetails</h2>

<div class="col-md-9">
    <section class="panel">
        <div class="panel-body">
            <div class="col-md-6">
                <div class="pro-img-details">
                    <img src="@Model.HeadImage" alt="" width="350">
                </div>
                <h4>Additional images</h4>
                @if (Model.AdditionalImageUrls != null)
                {
                    <div class="pro-img-list">
                        @foreach (var image in Model.AdditionalImageUrls)
                        {
                            <a href="@image" target="_blank">
                                <img src="@image" alt="" width="100">
                            </a>
                        }
                    </div>
                }
            </div>
            <div class="col-md-6">
                <h4 class="pro-d-title">
                    <a href="#" class="">
                        @Model.ProductName
                    </a>
                </h4>
                <p>
                    @Model.ProductDescription
                </p>
                <div class="product_meta">
                    <span class="posted_in"> <strong>Quantity:</strong>@Model.Count</span>
                </div>
                <div class="m-bot15"> <strong>Price : </strong> <span class="amount-old">$@Model.Price</span></div>
                <div class="form-group">
                    <label>Quantity</label>
                    <input type="quantiy" placeholder="1" class="form-control quantity">
                </div>
                <p>
                    <button class="btn btn-round btn-danger" type="button"><i class="fa fa-shopping-cart"></i> Add to Cart</button>
                </p>
            </div>
        </div>
    </section>
</div>