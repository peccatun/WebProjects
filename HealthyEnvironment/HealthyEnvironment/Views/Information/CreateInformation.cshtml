@model HealthyEnvironment.ViewModels.Informations.CreateInfomationViewModel
@{
    ViewData["Title"] = "Create";
}

<section id="section-contact" class="section appear clearfix">
    <div class="container">

        <div class="row mar-bot40">
            <div class="col-md-offset-3 col-md-6">
                <div class="section-header">
                    <h2 class="section-heading animated" data-animation="bounceInUp">@ViewData["Title"]</h2>
                    <div class="text-danger">
                        <p>
                            You are about to make a request for posting new information!
                            The new information have to be aproved by administrator first.
                            Your request will be sended imediatly and you be informed in a few minutis.
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div id="sendmessage">Your information has been submited. Thank you!</div>
                <div id="errormessage"></div>
                <div asp-validation-summary="All" class="text-danger">
                </div>
                <form action="" method="post" role="form" class="contactForm" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="@Model.About"></label>
                        <input asp-for="@Model.About" type="text" class="form-control" id="name" placeholder="What is your information about" data-rule="minlen:4"
                               data-msg="Please enter at least 4 chars" />
                        <div class="validation">
                            <span asp-validation-for="@Model.About"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.CategoryId"></label>
                            <select class="form-control" asp-for="@Model.CategoryId" asp-items="@Model.Categories.Select(c => new SelectListItem(c.CategoryName,c.CategoryId))">
                            </select>
                            <div class="validation">
                                <span asp-validation-for="@Model.CategoryId"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Content"></label>
                            <textarea asp-for="@Model.Content" class="form-control" rows="5" data-rule="required" data-msg="Please write something for us"
                                      placeholder="Information content"></textarea>
                            <div class="validation">
                                <span asp-validation-for="@Model.Content"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Image"></label>
                            <input asp-for="@Model.Image" type="file" value="" />
                            <div class="validation">
                                <span asp-validation-for="@Model.Image"></span>
                            </div>
                        </div>

                        <div class="text-center"><button type="submit" class="line-btn green">Submit Information</button></div>
                    </div>
                </form>
            </div>
            <!-- ./span12 -->
        </div>

    </div>
</section>