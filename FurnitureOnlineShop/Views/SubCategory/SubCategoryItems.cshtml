@model FurnitureOnlineShop.ViewModels.SubCategories.SubCategoryItemsViewModel

<h1>@Model.SubCategoryName</h1>
<div class="container">

    <div class="row">
        @foreach (var item in Model.Products)
        {
            <div class="col lg-6">
                <div class="sub-category-box">
                    <img class="sub-category-image" src="@item.ImagePath" alt="Alternate Text" width="350" height="263" />
                    <h1>@item.ProductName</h1>
                    <p class="price">@item.Price</p>
                    <p>@item.Description</p>
                </div>
            </div>
        }
    </div>

</div>