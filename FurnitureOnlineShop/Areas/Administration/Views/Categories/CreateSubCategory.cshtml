@model FurnitureOnlineShop.Areas.Administration.InputModels.Categories.CreateSubCategoryInputModel
@using FurnitureOnlineShop.Areas.Administration.InputModels.Categories;

<h1>Добави под категория</h1>

<form asp-area="Administration" asp-controller="Categories" asp-action="CreateSubCategory" method="post">
    <div class="form-group">
        <label asp-for="@Model.SubCategoryName"></label>
        <input asp-for="@Model.SubCategoryName"/>
        <span asp-validation-for="@Model.SubCategoryName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.CategoryId"></label>
        <select asp-for="@Model.CategoryId" asp-items="@Model.CategoryDropDownMenu.Select(c => new SelectListItem(c.Text,c.Value))">

        </select>
    </div>
</form>