@model TaskReminder.InputModels.CreateTaskInputModel
@{
    ViewData["Title"] = "CreateTask";
}

<h1>CreateTask</h1>
<hr />
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label id="Content"></label>
        <textarea class="form-control" id="Content" name="Content" rows="4" cols="50" placeholder="Task content..."></textarea>
        <span asp-validation-for="@Model.Content"></span>
    </div>
    <div>
        <div class="form-control">
            <label asp-for="@Model.ExpireDay"></label>
            <input asp-for="@Model.ExpireDay" type="date" />
            <span asp-validation-for="@Model.ExpireDay"></span>
            <label asp-for="@Model.ExpireTime"></label>
            <input asp-for="@Model.ExpireTime" type="time" />
            <span asp-validation-for="@Model.ExpireTime"></span>
        </div>
    </div>
    <input type="hidden" name="applicationUserId" value="@Model.ApplicationUserId" />
    <br />
    <div class="text-center">
        <input class="btn btn-lg btn-success" type="submit" name="submitTask" value="Submit" />
    </div>
</form>


